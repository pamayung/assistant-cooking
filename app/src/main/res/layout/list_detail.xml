<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="bahan"
            android:id="@+id/tv_keterangan"/>
        <TextView
            android:id="@+id/tv_judul_bahan"
            android:layout_below="@+id/tv_keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Bahan-bahan : "
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_below="@+id/tv_judul_bahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="bahan"
            android:id="@+id/tv_bahan"/>
        <TextView
            android:id="@+id/tv_judul_langkah"
            android:layout_below="@+id/tv_bahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Langkah-langkah :"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_langkah"
            android:layout_below="@+id/tv_judul_langkah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="langkah"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>

</RelativeLayout>